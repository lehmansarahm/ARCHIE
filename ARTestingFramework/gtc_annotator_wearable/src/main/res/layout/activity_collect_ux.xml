<?xml version="1.0" encoding="utf-8"?>

<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/background"
    android:background="@color/annotationBackground"
    tools:context=".wearable.CollectUxActivity">

    <RelativeLayout
        android:id="@+id/gridBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_box="all">

        <TextView android:id="@+id/instructionTextView"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On a scale of 1-5, how have you been enjoying the system so far?"
            android:textColor="@color/annotationText"
            android:includeFontPadding="false"
            android:textSize="12sp" />


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/iconScrollView"
            android:layout_below="@id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:fadeScrollbars="false"
            android:fillViewport="false">

            <RadioGroup
                android:id="@+id/iconGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio_one"
                    android:text="1 - Highly enjoyable"
                    android:textColor="@color/annotationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radio_two"
                    android:text="2 - Somewhat enjoyable"
                    android:textColor="@color/annotationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radio_three"
                    android:text="3 - Neutral"
                    android:textColor="@color/annotationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radio_four"
                    android:text="4 - Somewhat unenjoyable"
                    android:textColor="@color/annotationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radio_five"
                    android:text="5 - Highly unenjoyable"
                    android:textColor="@color/annotationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        </ScrollView>

        <Button
            android:id="@+id/submitUx"
            android:layout_below="@id/iconScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>

