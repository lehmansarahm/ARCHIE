<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.temple.gtc_annotator">

    <!-- MOBILE AND WEARABLE APPS CAN USE DIFFERENT SUB-PACKAGES BUT
    MUST HAVE THE SAME OVERALL PACKAGE NAME!! -->

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- MOBILE APP MUST HAVE ALL THE SAME PERMISSIONS AS THE WEARABLE
    APP, EVEN IF IT DOESN'T USE THEM!! -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- MOBILE AND WEARABLE APP *** MUST *** HAVE THE SAME GOOGLE
        PLAY SERVICES VERSION -->

        <activity android:name=".mobile.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPattern=".*" />
            </intent-filter>

            <!-- USING EXPLICIT MESSAGE API LISTENERS INSTEAD OF WEARABLE
             SERVICE ... ADD WEARABLE ACTION INTENT FILTER DIRECTLY TO ACTION -->

        </activity>

        <service android:name=".mobile.CommunicatorService"
            android:process="remote_process.CommunicatorService"
            android:exported="true"
            android:enabled="true">

            <!-- Responsible for facilitating communication between any HAR apps
             being tested, and the annotator-wearable app on the watch -->

        </service>

    </application>

</manifest>